{
  "$schema": "http://json.schemastore.org/template",
  "author": "Finaps",
  "identity": "Finaps.MicroServicesTemplate.CSharp",
  "name": "Finaps Microservice Framework",
  "shortName": "finapsms",
  "sourceName": "MicroService", //All instances of this term will be replaced by the -n option
  "preferNameDirectory": "true",
  "symbols": {
    "Mongo": {
      "type": "parameter",
      "dataType": "bool",
      "defaultValue": "false"
    },
    "Http": {
      "type": "parameter",
      "dataType": "bool",
      "defaultValue": "false"
    },
    "Update": {
      "type": "parameter",
      "dataType": "bool",
      "defaultValue": "false"
    }
  },
  "sources": [{
    "modifiers": [{
        "condition": "(!Mongo)",
        "exclude": [
          "Common/Mongo"
        ]
      },
      {
        "condition": "(!Http)",
        "exclude": ["Common/HTTP"]
      },
      {
        "condition": "(Update)",
        "exclude": [
          "Startup.cs",
          "appsettings.json",
          "appsettings.Development.json",
          "README.md",
          "Controllers/HomeController.cs"
        ]
      },
      {
        "exclude": [
          "**/[Bb]in/**",
          "**/[Oo]bj/**",
          ".template.config/**/*",
          "**/*.filelist",
          "**/*.user",
          "**/*.lock.json",
          ".git/**"
        ]
      }
    ]
  }]
}